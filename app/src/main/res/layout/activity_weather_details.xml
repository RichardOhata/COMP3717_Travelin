<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    android:rowCount="5"
    tools:context=".WeatherDetails">

    <TextView
        android:id="@+id/city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_rowSpan="1"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:gravity="center"
        android:text="Vancouver"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/weatherTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_row="1"
        android:layout_rowSpan="1"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:gravity="center"
        android:text="10 degree Celsius"
        android:textColor="@color/black"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/weatherCondition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingRight="10dp"
        android:layout_row="2"
        android:layout_rowSpan="1"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:gravity="center"
        android:text="Shower"
        android:textColor="@color/black"
        android:textSize="23sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_rowSpan="2"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:orientation="vertical">
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/weatherSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.example.travelin.WeatherSummaryFragment"
            tools:layout="@layout/fragment_weather_summary" />
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/weatherForecast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.example.travelin.WeatherForecastFragment"
            tools:layout="@layout/fragment_weather_forecast" />
    </LinearLayout>





</GridLayout>